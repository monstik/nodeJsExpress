<h1>Мои заказы</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Заказ № {{id}}
                        </span>
                        <p class="date">Дата: {{date}}</p>
                        <p>Name: {{userName}}</p>
                        <hr>
                        <ol>
                            {{#each courses}}
                                <li>{{course.title}} <span> - (x{{count}})</span></li>
                            {{/each}}
                        </ol>

                        <hr>
                        <p>Цена: <span class="price">{{price}}</span></p>
                    </div>

                </div>
            </div>
        </div>
    {{/each}}

{{else}}
    <p>Заказов пока нету</p>
{{/if}}