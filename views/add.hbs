<h1>Добавить кусры</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название">Helper text</span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Цена</label>
        <span class="helper-text" data-error="Введите цену">Helper text</span>
    </div>
    <div class="input-field">
        <input id="img" name="image" type="text" class="validate" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите URL картинки">Helper text</span>
    </div>

    <button class="btn btn-primary">Добавить курс</button>
</form>