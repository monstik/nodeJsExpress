<h1>Редактировать курс - {{course.title}}</h1>

<form class="course-form" action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Название курса</label>
<!--        <span class="helper-text" data-error="Введите название">Helper text</span>-->
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Цена</label>
<!--        <span class="helper-text" data-error="Введите цену">Helper text</span>-->
    </div>
    <div class="input-field">
        <input id="img" name="image" type="text" class="validate" required value="{{course.image}}">
        <label for="img">URL картинки</label>
<!--        <span class="helper-text" data-error="Введите URL картинки">Helper text</span>-->
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn btn-primary">Редактировать курс</button>
</form>

<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn red">Удалить</button>
</form>