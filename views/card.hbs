<h1>Корзина</h1>
<div id="card">


{{#if courses.length}}
    <table>
        <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
        </thead>

        <tbody>
        {{#each courses}}
            <tr>
                <td><a href="/courses/{{id}}">{{title}}</a></td>
                <td>{{price}}</td>
                <td>{{count}}</td>
                <td>
                    <button
                            class="btn btm-small js-remove"
                            data-id="{{id}}"
                            data-csrf="{{@root.csrf}}"
                    >Удалить
                    </button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <strong>Цена:<span class="price">{{price}}</span></strong>
    <form action="/orders" method="post">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button type="submit" class="btn">Сделать заказ</button>
    </form>
{{else}}
    <p>Корзина пуста</p>
{{/if}}

</div>